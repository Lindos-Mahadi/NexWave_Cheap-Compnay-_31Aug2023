
@{
    ViewBag.Title = "changepassword";
}



<div class="container margin-bottom-45 margin-top-45">

    <div class="row">
        <div class="col-md-3">
            @{Html.RenderPartial("sidebar");}
        </div>
        <div class="col-md-9">
            <h4 class="headline">Change Password</h4>

            <div class="row">
                <div class="col-md-10">
                    @Html.Raw(ViewBag.msg)
                    <form method="post" action="@Url.Action("change-password","User",new { Area="User"})" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()


                        <div class="row">
                            <div class="col-md-6">
                                <label>Current Password</label>
                                <input type="password" name="oldpass">

                                <label>New Password</label>
                                <input type="password" name="newpass">

                                <label>Confirm New Password</label>
                                <input type="password" name="confirmpass">
                            </div>

                            <div class="col-md-6">
                                <div class="notification notice">
                                    <p>Your password should be at least 8 random characters long to be safe</p>
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <button type="submit" class="button">Change password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
